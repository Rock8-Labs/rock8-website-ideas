# msmtp configuration for Rock8.io contact form
# This file should be placed at /etc/msmtprc or ~/.msmtprc

# Default settings for all accounts
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# Rock8.io SMTP server
account        rock8
host           YOUR_SMTP_HOST_HERE
port           465
from           YOUR_FROM_EMAIL_HERE
user           YOUR_SMTP_USERNAME_HERE
password       YOUR_SMTP_PASSWORD_HERE
tls_starttls   off

# Default account to use
account default : rock8

# Security note: Make sure this file has proper permissions
# chmod 600 /etc/msmtprc
# chown root:root /etc/msmtprc